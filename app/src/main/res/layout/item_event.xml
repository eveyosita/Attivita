<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="280dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:background="@drawable/select_button">

    <TextView
        android:id="@+id/name_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textSize="18dp"
        android:text="nameevent"/>

    <TextView
        android:id="@+id/amount_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_event"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="18dp"
        android:text="amountevent"/>

    <TextView
        android:id="@+id/date_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amount_event"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="18dp"
        android:text="dateevent"/>

    <TextView
        android:id="@+id/time_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_event"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="18dp"
        android:text="timeevent"/>

    <TextView
        android:id="@+id/cateegory_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_event"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="18dp"
        android:text="cateegoryevent"/>

    <TextView
        android:id="@+id/location_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cateegory_event"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="18dp"
        android:text="locationevent"/>


</RelativeLayout>