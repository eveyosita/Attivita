<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright">

    <android.support.v7.widget.Toolbar
        android:id="@+id/bar_home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorGray">


        <ImageButton
            android:id="@+id/addevent_imBut"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:background="@drawable/ic_add_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="27dp"
            android:text="หน้าหลัก" />

        <ImageButton
            android:id="@+id/addwarn_imBut"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_warning_black_50dp" />
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar_home">


        <ListView
            android:id="@+id/list_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:dividerHeight="5dp"
            android:background="@drawable/backgroundcolor"
            android:scrollbars="none"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/textview_backgroundhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="22dp"/>


</RelativeLayout>
