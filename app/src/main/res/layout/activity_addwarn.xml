<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor"
    tools:context=".AddwarnActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/bar_addwarnevent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorGray">

        <Button
            android:id="@+id/button_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="@drawable/ic_chevron_left_black_"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="27dp"
            android:text="ขอความช่วยเหลือ" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar_addwarnevent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textdetailwarnevent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="รายละเอียด"
            android:textColor="@android:color/background_dark"
            android:textSize="18dp"
            />
        <LinearLayout
            android:id="@+id/relatlayout_detailwarnevent"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/layout_corner"
            android:orientation="vertical">

            <EditText
                android:id="@+id/eventname_editText"
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorWhite"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="end"
                >
                <TextView
                    android:id="@+id/editText_count_eventname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />
                <TextView
                    android:id="@+id/textView_eventnamemax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/50" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/locat_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="สถานที่"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <RelativeLayout
                android:id="@+id/relatlayout_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp">

                <Button
                    android:id="@+id/button_locat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_location_on_black_24dp" />

                <TextView
                    android:id="@+id/tv_locat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:text="เลือกสถานที่จัดกิจกรรม"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"/>

            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/finishwarn_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="เสร็จสิ้น"
            android:background="@drawable/button_login_corner"/>

    </LinearLayout>



</RelativeLayout>